<VirtualHost *:80>
    ServerName {{ our_domain }}
    ServerAlias www.{{ our_domain }}

    DocumentRoot /var/www/project/public
    <Directory /var/www/{{ our_domain }}/public>
        # enable the .htaccess rewrites
        AllowOverride All
        Order Allow,Deny
        Allow from All
    </Directory>

    # uncomment the following lines if you install assets as symlinks
    # or run into problems when compiling LESS/Sass/CoffeeScript assets
    # <Directory /var/www/project>
    #     Options FollowSymlinks
    # </Directory>

    ErrorLog /var/log/apache2/{{ our_domain | replace(".","_")}}_error.log
    CustomLog /var/log/apache2/{{ our_domain | replace(".","_")}}_access.log combined
</VirtualHost>